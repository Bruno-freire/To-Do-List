<%- include('../layouts/header', { title: "checklist.name" }) %>

<%- include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4"><%= checklist.name %></h1>
      </div>
      <div class="column is-one-fifth">
        <a href="/checklist/<%= checklist.id%>/tasks/new" class="button is-success is-small">Nova Tarefa</a>
        <a href="/checklist" class="button is-small">Voltar</a>
      </div>
    </div>
    <% checklist.task.forEach(tarefa => {%>
      <hr />
      <div class="columns">
        <div class="column is-four-fifths <%=tarefa.done ? 'has-text-success is-italic': ''%>">
          <input type="checkbox" 
          onchange="setTagAsDone(this, '<%=tarefa.id%>')" 
          <%= tarefa.done ? "checked" : ''%>
          /> <%= tarefa.name%>
        </div>
  
        <div class="column is-one-fifth">
          <a href="/tasks/<%= tarefa.id%>?_method=delete" class="button is-danger is-small" >Remover</a>
        </div>
      </div>
    <%})%>
  </div>
</section>


<%- include('../layouts/footer')%>